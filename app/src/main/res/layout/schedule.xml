<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/downloadSchedule"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:src="@drawable/arrow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="all"
            android:clickable="false"
            android:gravity="center"
            android:text="www.cadnitd.co.in"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawablePadding="10dp"
            android:textColorLink="@color/floating_blue"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:textColorLink="@color/floating_blue"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:layout_width="wrap_content"
            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:clickable="false"
            android:gravity="center|bottom"
            android:text="technoshine.ca@gmail.com"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</LinearLayout>